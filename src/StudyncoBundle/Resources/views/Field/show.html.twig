{% extends "StudyncoBundle:Category:menu.html.twig" %}

{% block title %} create new category {% endblock title %}

{% block content %}
    <div class="container-fluid" style="margin-top: 25px;">

        <div class="col-md-8 col-xs-12 col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2> L'affichage de champ </h2>
                </div>

                <div class="panel-body">

                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <td> Title </td>
                            <td> {{ field.title }}</td>
                        </tr>
                        <tr>
                            <td> Type </td>
                            <td> {{ field.type }}</td>
                        </tr>
                        <tr>
                            <td> Category </td>
                            <td> {{ field.category.title }}</td>
                        </tr>
                        <tr>
                            <td> Category Description</td>
                            <td> {{ field.category.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-xs-12 col-sm-12">
            <div class="panel panel-warning">
                <div class="panel panel-heading">
                    <h2> Action </h2>
                </div>
                <div class="panel-body">
                    <a href="{{ path('field_update', {'id':field.id}) }}" class="btn btn-sm btn-primary"> Edit </a>
                    <a href="{{ path('field_list') }}" class="btn btn-sm btn-success"> List </a>
                    <a href="{{ path('field_update', {'id':field.id}) }}" class="btn btn-sm btn-danger"> Delete </a>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}