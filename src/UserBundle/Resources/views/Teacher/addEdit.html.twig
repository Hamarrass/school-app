{% extends 'DashboardBundle:Admin:index.html.twig' %}

{% block content %}
    <section class="content">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title"> Add new Teacher</h3>
            </div>
            {{ form_start(form) }}
            <div class="box-body">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.firstName) }}
                        {{ form_widget(form.firstName,{'attr':{'class':'form-control','placeholder':'First Name'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.roles) }}
                        {{ form_widget(form.roles,{'attr':{'class':'select2 form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.lastName) }}
                        {{ form_widget(form.lastName,{'attr':{'class':'form-control','placeholder':'Last Name'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.gender) }}
                        {{ form_widget(form.gender, {'attr':{'class':'form-control','placeholder':'choose one '}}) }}
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.birthDate) }}
                        {{ form_widget(form.birthDate,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                       {{ form_label(form.type) }}
                       {{ form_widget(form.type,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone,{'attr':{'class':'form-control','placeholder':'Example 06123456987 '}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class':'form-control','placeholder':'Email'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.username) }}
                        {{ form_widget(form.username, {'attr': {'class':'form-control','placeholder':'Username'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.cin) }}
                        {{ form_widget(form.cin, {'attr': {'class':'form-control','placeholder':'Username'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {% if form.image.vars.value %}
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ asset('uploads/img/'~form.image.vars.value.url) }}">
                        {% endif %}
                        {{ form_widget(form.image) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {% if teacher.cv %}
                            <embed src="{{ asset(teacher.webPath) }}" width="500" height="375"
                                   type="application/pdf">
                        {% endif %}
                        {{ form_label(form.cv) }}
                        {{ form_widget(form.cv) }}
                    </div>
                </div>

            </div>
            <div class="box-footer">
                {{ form_widget(form.save,{'attr':{'class':'btn btn-success'}}) }}
                <a href="{{ path('list_teacher') }}" class="btn btn-danger">Cancel</a>
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock content %}