{% extends 'DashboardBundle:Admin:index.html.twig' %}

{% block content %}
    <div class="">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Manager Profile
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li><a href="{{ path('list_manager') }}">Managers</a></li>
                <li class="active">Manager profile</li>
            </ol>
        </section>
        <!-- End Of Content Header (Page header) -->

        <!-- Main Content -->
        <section class="content">
            <div class="row">
                <div class="col-md-3">
                    <div class="box box-success">
                        <div class="box-body box-profile">
                            <img class="profile-user-img img-responsive img-circle" src="{{ asset(manager.image.webPath) }}">
                            <h3 class="profile-username text-center">{{ manager.firstName ~ manager.lastName }}</h3>
                            <p class="text-muted text-center">Manager</p>

                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b> Age </b><a class="pull-right">{{ date_diff(manager.birthDate) }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b> Last Logged In </b><a class="pull-right">{{ date_diff(manager.lastLogin) }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b> CIN </b><a class="pull-right">{{ manager.cin }}</a>
                                </li>
                            </ul>
                            <a href="{{ path('update_manager',{id:manager.id}) }}" class="btn btn-primary btn-xs">Update</a>

                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#personnel" data-toggle="tab">Personnel Information</a> </li>
                            <li><a href="#modules" data-toggle="tab">TAB</a> </li>
                            <li><a href="#skills" data-toggle="tab">TAB</a> </li>
                            <li><a href="#cv" data-toggle="tab">TAB</a> </li>
                        </ul>

                        <div class="tab-content">
                            <div class="active tab-pane" id="personnel">
                                <ul class="list-group list-group-unbordered">
                                    <li class="list-group-item">
                                        <b> First Name </b> <a class="pull-right">{{ manager.firstName }}</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b> Last Name </b> <a class="pull-right">{{ manager.lastName }}</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b> Email </b> <a class="pull-right">{{ manager.email }}</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b> Gender </b> <a class="pull-right">{{ manager.gender }}</a>
                                    </li>

                                    <li class="list-group-item">
                                        <b> Birth Date </b> <a class="pull-right">{{ manager.birthDate | date("d / m / Y") }}</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b> Phone </b> <a class="pull-right">{{ manager.phone }}</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="tab-pane" id="modules">
                                modules
                            </div>
                            <div class="tab-pane" id="skills">
                                skills
                            </div>
                            <div class="tab-pane" id="cv">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock content %}