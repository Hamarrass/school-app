{% extends 'DashboardBundle:Admin:index.html.twig' %}

{% block content %}
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Academic Years</h3>
            </div>

            <div class="box-header  with-border">
                <div class="">
                    <a href="{{ path('add_academic_year') }}" class="btn btn-xs btn-primary">add new Year </a>
                </div>
            </div>

            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for year in academicYears %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ year.title }}</td>
                                <td>{{ year.startDate | date }}</td>
                                <td>{{ year.endDate | date }}</td>
                                <td>
                                    <a href="{{ path('show_academic_year',{id:year.id}) }}" class="btn btn-success btn-xs">Show</a>
                                    <a href="{{ path('show_academic_year',{id:year.id}) }}" class="btn btn-danger btn-xs">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock content %}