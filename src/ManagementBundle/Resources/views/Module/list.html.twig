{% extends 'DashboardBundle:Admin:index.html.twig' %}

{% block content %}
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Module</h3>
            </div>

            <div class="box-header  with-border">
                <div class="col-md-6">
                    <a href="{{ path('add_module') }}" class="btn btn-xs btn-primary">add new Module </a>
                </div>
                {{ form_start(form) }}
                <div class="col-md-3">
                    {{ form_widget(form.file, {'attr':{'class':''}}) }}
                </div>
                <div class="col-md-3">
                    {{ form_widget(form.save, {'attr':{'class':'btn btn-primary btn-xs', 'value':'Upload file'}}) }}
                </div>
                {{ form_end(form) }}
            </div>

            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>Title</th>
                        <th>VH</th>
                        <th>Coefficient</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for module in modules %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ module.code }}</td>
                            <td>{{ module.title}}</td>
                            <td>{{ module.hours}}</td>
                            <td>{{ module.coefficient}}</td>
                            <td>
                                <a href="{{ path('show_level',{id:module.id}) }}" class="btn btn-success btn-xs">Show</a>
                                <a href="{{ path('show_level',{id:module.id}) }}" class="btn btn-danger btn-xs">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock content %}